<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_plan_name"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_30"
        android:text="计划标题：5号楼巡检任务" />

    <TextView
        android:id="@+id/tv_create_time"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_8"
        android:text="创建时间：2018-08-06 16:39:49" />

    <TextView
        android:id="@+id/tv_projectid"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_8"
        android:text="项目编号：6c9d5c0377df4965869e2fa83c3a2791" />

    <TextView
        android:id="@+id/tv_plan_describe"
        style="@style/textstyle_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_25"
        android:layout_marginTop="@dimen/size_8"
        android:maxLines="5"
        android:text="计划描述：巡检描述检查项目（抄表、检查外观、检查故障、检查有效期等等）" />

    <TextView
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_14"
        android:text="生成任务：" />

    <TextView
        android:id="@+id/tv_task_state"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40"
        android:layout_marginTop="@dimen/size_6"
        android:text="任务周期：每月" />

    <TextView
        android:id="@+id/tv_task_number"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40"
        android:layout_marginTop="@dimen/size_6"
        android:text="循环时间：三个月" />

    <TextView
        android:id="@+id/tv_task_remind"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40"
        android:layout_marginTop="@dimen/size_6"
        android:text="提醒时间：18:00" />

    <TextView
        android:id="@+id/tv_task_time"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40"
        android:layout_marginTop="@dimen/size_6"
        android:text="执行时间：每月2日-每月4日" />

    <TextView
        android:id="@+id/tv_plan_map"
        android:layout_width="wrap_content"
        android:textSize="@dimen/size_15"
        android:textColor="@color/text_color"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_25"
        android:layout_marginRight="@dimen/size_15"
        android:gravity="center_vertical|left"
        android:maxLines="5"
        android:layout_marginTop="@dimen/size_14"
        android:text="标签集合：
        /u3000 6666, 66666, 66666, 66666, 66666, 66666" />

</LinearLayout>