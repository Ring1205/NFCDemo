<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/title_bg"
    android:layout_height="@dimen/title_height"
    tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage,ContentDescription,UseCompoundDrawables">

    <RelativeLayout
        android:id="@+id/base_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/base_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/base_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/back"
                android:padding="@dimen/size_13"
                android:src="@mipmap/back" />

            <ImageView
                android:id="@+id/base_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/size_13"
                android:visibility="visible"
                android:tint="@android:color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/base_right_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_height"
                android:layout_marginRight="@dimen/size_10"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_17"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/base_right_icon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/size_13"
                android:src="@mipmap/add"
                android:tint="@android:color/white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/base_right_icon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/size_13"
                android:src="@mipmap/more"
                android:tint="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
