<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_task_name"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_30"
        android:text="任务名称：5号楼巡检任务" />

    <TextView
        android:id="@+id/tv_task_time"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_8"
        android:text="任务时间：2018-2-15  5:00:00 - 2018-2-15  9:00:00" />

    <TextView
        android:id="@+id/tv_task_state"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_8"
        android:text="任务状态：已完成" />

    <TextView
        android:id="@+id/tv_task_incharge"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_8"
        android:text="责任主管：墨明智" />

    <TextView
        android:id="@+id/tv_task_routing"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_8"
        android:text="巡检人员：墨明智" />

    <TextView
        android:id="@+id/tv_task_detalis"
        style="@style/textstyle_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_25"
        android:layout_marginTop="@dimen/size_8"
        android:maxLines="5"
        android:text="任务描述：任务检查项目（抄表、检查外观、检查故障、检查有效期等等）" />

    <TextView
        android:id="@+id/tv_task_label"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginTop="@dimen/size_14"
        android:text="关联标签：" />

    <TextView
        android:id="@+id/tv_label_num"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40"
        android:layout_marginTop="@dimen/size_6"
        android:text="标签编号：a1d1-21af-f121-be21-0021" />

    <TextView
        android:id="@+id/tv_label_name"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40"
        android:layout_marginTop="@dimen/size_6"
        android:text="标签名称：一号标签" />

    <TextView
        android:id="@+id/tv_label_address"
        style="@style/text_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40"
        android:layout_marginTop="@dimen/size_6"
        android:text="标签安装位置：绿地中心" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_imgs"
            style="@style/text_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_40"
            android:layout_marginTop="@dimen/size_6"
            android:text="位置详情：" />

        <ImageView
            android:id="@+id/iv_device"
            android:layout_toRightOf="@+id/tv_imgs"
            android:layout_alignTop="@+id/tv_imgs"
            android:layout_above="@+id/bt_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:layout_marginRight="@dimen/size_30"
            android:layout_marginTop="@dimen/size_8" />

        <Button
            android:id="@+id/bt_task"
            style="@style/make_sure_bth_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_30"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginRight="@dimen/size_20"
            android:background="@drawable/button_green_5_solid"
            android:text="@string/scan_nfc" />
    </RelativeLayout>

</LinearLayout>